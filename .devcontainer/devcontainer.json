{
  "name": "UP5Star DevContainer",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:22",
  "remoteUser": "node",
  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": {
      "label": "Next.js dev server",
      "onAutoForward": "notify"
    }
  },
  "containerEnv": {
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": true
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "eslint.format.enable": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "typescript.tsdk": "/usr/local/share/npm-global/lib/node_modules/typescript/lib"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next",
        "ms-playwright.playwright",
        "prisma.prisma",
        "bradlc.vscode-tailwindcss",
        "eamodio.gitlens",
        "github.vscode-github-actions",
        "mikestead.dotenv"
      ]
    }
  },
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],
  "postCreateCommand": "npm install && npx playwright install --with-deps",
  "postStartCommand": "npm run lint:check && npm run type-check"
}
